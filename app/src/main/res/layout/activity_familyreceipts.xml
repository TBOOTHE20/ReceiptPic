<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FamilyReceipts"
        android:padding="10dp"
        android:id="@+id/familyreceiptlabel"
        android:textColor="#7dbd40"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="40sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddMember"
        android:id="@+id/addmemberfirststep"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/familyreceiptlabel"
        android:layout_alignEnd="@+id/familyreceiptlabel"
        android:layout_alignLeft="@+id/familyreceiptlabel"
        android:layout_alignStart="@+id/familyreceiptlabel"
        android:onClick="onButtonClick"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newinfo"
        android:textSize="25sp"
        android:layout_below="@+id/familyreceiptlabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newinfo2"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newinfo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newinfo3"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newinfo2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>